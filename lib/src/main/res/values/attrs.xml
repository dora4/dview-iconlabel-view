<?xml version="1.0" encoding="utf-8"?>

<resources>
    <declare-styleable name="DoraIconLabelView">
        <attr name="dview_ilv_icon" format="reference"/>
        <attr name="dview_ilv_text" format="string|reference"/>
        <attr name="dview_ilv_textSize" format="dimension|reference"/>
        <attr name="dview_ilv_textColor" format="color|reference"/>
        <!-- icon的大小，有icon背景时为icon背景的大小 -->
        <attr name="dview_ilv_iconSize" format="dimension|reference"/>
        <!-- 文字和icon的间距，有icon背景时为和icon背景的间距 -->
        <attr name="dview_ilv_iconLabelGap" format="dimension|reference"/>

        <!-- icon背景形状，默认无 -->
        <attr name="dview_ilv_iconBackgroundShape">
            <enum name="none" value="0"/>
            <enum name="rounded_rect" value="1"/>
            <enum name="circle" value="2"/>
        </attr>
        <!-- icon背景色，默认灰色 -->
        <attr name="dview_ilv_iconBackgroundColor" format="color|reference"/>
        <!-- icon背景内边距，和icon的间距 -->
        <attr name="dview_ilv_iconBackgroundPadding" format="dimension|reference"/>
        <!-- icon背景是否带边框 -->
        <attr name="dview_ilv_iconBackgroundBorder" format="boolean"/>
        <!-- icon背景边框颜色 -->
        <attr name="dview_ilv_iconBackgroundBorderColor" format="color|reference"/>
        <!-- icon背景边框宽度 -->
        <attr name="dview_ilv_iconBackgroundBorderWidth" format="dimension|reference"/>
        <!-- icon背景为圆角矩形时的圆角大小 -->
        <attr name="dview_ilv_iconCornerRadius" format="dimension|reference"/>
    </declare-styleable>

</resources>